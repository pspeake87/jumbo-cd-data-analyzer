<div class="container">

  <h2> Please Enter your <b>New CD's</b> information</h2>
  <br>
<div class="row">

<div class="col-md-2">
     <%= form_for @newcd do |f| %>

      <div class="form-group">
       <%= f.label :new_bankname %>
       <%= f.text_field :new_bankname, autofocus: true, class: 'form-control',
       placeholder: "Enter the Bank's name" %>
      </div>

      <div class="form-group">
        <%= f.label "Rate %" %>
        <%= f.text_field :new_rate, class: 'form-control', placeholder: "Enter the Rate" %>
      </div>

      <div class="form-group">
       <%= f.label "Fee %" %>
       <%= f.text_field :new_fee, class: 'form-control', placeholder: "Enter the Fee" %>
      </div>

       <div class="form-group">
       <%= f.label "#{:new_term} (in years)" %>
       <%= f.text_field :new_term, class: 'form-control', placeholder: "Enter the Amount of Years" %>
       </div>

      <%= f.submit "Submit", class: 'btn btn-success' %>
      <% end %>
</div>
</div>
</div>
